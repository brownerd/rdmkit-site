// Globals
lineHeight = 1.5
baseFontSize = 20px
half = .75rem
full = 1.5rem
threequarters = 2.25rem
double = 3rem
fx = .2s all ease-in-out

face = {
  mono : "ibm plex mono"
}

// simple breakpoints
breakpoints = {
  xs: "(max-width: 510px)",
  sm: "(max-width: 850px)",
  med: "(max-width: 1024px)",
  lg: "(max-width: 1600px)"
}

breakpoint(name) 
  @media breakpoints[name]
    {block}

// Flexbox debug tip from Wes Bos
debug(color=red)
  border 1px solid color

